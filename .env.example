# Database Configuration
# REQUIRED: Main application database
DB_HOST=localhost
DB_PORT=3306
DB_USER=your_database_user
DB_PASSWORD=your_database_password
DB_NAME=master_specs_db
DB_SSL=false

# Suppliers Database Configuration  
# REQUIRED: Suppliers-specific database
SUPPLIERS_DB_HOST=localhost
SUPPLIERS_DB_PORT=3306
SUPPLIERS_DB_USER=your_database_user
SUPPLIERS_DB_PASSWORD=your_database_password
SUPPLIERS_DB_NAME=suppliers_db
SUPPLIERS_DB_SSL=false

# Authentication Database Configuration
# REQUIRED: User authentication database
AUTH_DB_HOST=localhost
AUTH_DB_PORT=3306
AUTH_DB_USER=your_database_user
AUTH_DB_PASSWORD=your_database_password
AUTH_DB_NAME=security_db
AUTH_DB_SSL=false

# Session Configuration
# REQUIRED: Generate a strong random secret key
# You can use: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
SESSION_SECRET=your_session_secret_here

# Server Configuration
PORT=3000
NODE_ENV=development

# Server Configuration
PORT=3000
